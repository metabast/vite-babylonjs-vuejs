{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "space-in-parens": ["error", "always"],
        "semi-spacing": ["error", "always"]
    }
}
